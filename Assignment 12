Assignment 12

#include<iostream>;
using namespace std;

class Fruit {
public:
int sum;
Fruit() {
sum = 0;
}
};

class Apples : public Fruit {
public:
int apples;
Apples(int a) {
apples = a;
sum += a;
}
};

class Mangoes : public Fruit {

public:
int mangoes;
Mangoes(int m) {
mangoes = m;
sum+=m ;
}
};

int main() {
Apples a(5);
Mangoes m(6);

cout &lt;&lt; &quot;Number of apples: &quot; &lt;&lt; a.apples &lt;&lt; endl;
cout &lt;&lt; &quot;Number of mangoes: &quot; &lt;&lt; m.mangoes &lt;&lt; endl;
cout &lt;&lt; &quot;Total number of fruits: &quot; &lt;&lt; a.apples + m.mangoes &lt;&lt; endl;

return 0;
}

Output
Number of apples: 5
Number of mangoes: 6
Total number of fruits: 11

=== Code Execution Successful ===
